// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  email String @unique
  password  String
  firstname String?
  lastname String?
  averageGuests Int?
  allergyId Int?
  allergies     Allergies?       @relation(fields: [allergyId], references: [id])
  role    Role?     @default(USER) 
  reservations Reservations[]  
}
model Reservation {
  id        Int   @id @default(autoincrement())
  createdAt DateTime @default(now()) 
  totalGuests Int @default(1)
  day    DateTime
  hour DateTime @db.Time()
  reservations Reservations[]  
  
}
model Reservations {
  id        Int   @id @default(autoincrement())
  userId   String
  user     User       @relation(fields: [userId], references: [id])
  reservationId Int
  reservation     Reservation       @relation(fields: [reservationId], references: [id])
  
  
}
model Horaires {
  id        Int   @id @default(autoincrement()) 
  name String
  dayStartAM DateTime @db.Time() @default("1970-01-01T11:00:00Z")
  dayEndAM DateTime @db.Time() @default("1970-01-01T14:00:00Z")
  dayStartPM DateTime @db.Time() @default("1970-01-01T18:00:00Z")
  dayEndPM DateTime @db.Time() @default("1970-01-01T22:00:00Z")
  
}
model Allergies {
  id Int @id @default(autoincrement())
  name String
  user User[]
  
}
model Gallery {
  id        Int   @id @default(autoincrement())
  title String
  content String?
  path String
  createdAt DateTime @default(now()) 
  
}
model Menu {
  id        Int   @id @default(autoincrement())
  title String
  content String?
  createdAt DateTime @default(now()) 
  
}
enum Role {
  USER
  ADMIN
  
}